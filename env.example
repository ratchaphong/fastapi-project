# Application Settings
APP_NAME=FastAPI Project
APP_VERSION=1.0.0
DEBUG=True

# Database Configuration
# For Docker: use 'db' as hostname (service name in docker-compose)
# For local development: use 'localhost' as hostname
DATABASE_URL=postgres://postgres:postgres@db:5432/fastapi_db

# API Configuration
API_KEY=your_api_key_here

# Application Limits
MAX_ITEMS=100

# Database Connection (for Docker Compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=fastapi_db

# MCP Server Configuration
# ใช้ local server (http://localhost:8001/mcp) หรือ deployed server
# Local server: รัน python mcp_server.py แล้วใช้ http://localhost:8001/mcp
# Deployed server: ใช้ URL จาก FastMCP และต้องมี Bearer token
MCP_SERVER_URL=http://localhost:8001/mcp
# Bearer token สำหรับ deployed server (ถ้าใช้ deployed server ให้ใส่ token ตรงนี้)
# MCP_BEARER_TOKEN=your_bearer_token_here

